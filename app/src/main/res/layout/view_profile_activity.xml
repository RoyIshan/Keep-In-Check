<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Owner.ViewProfile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#049BEE"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="20dp"
            android:padding="70dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ownericon"
            app:tint="#FFFCFC" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="70dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:padding="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/baseline_person_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:text="Name"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/ownerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/baseline_phone_iphone_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:text="Phone Number"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/ownerPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/baseline_business_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:text="Company Name"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/ownerCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/baseline_code_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:text="Company Code"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/ownerCC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|fill"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/editProfile"
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/poppins"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconPadding="10dp"
                    app:iconSize="20dp" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/poppins"
                    android:text="Logout"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_exit"
                    app:iconPadding="10dp"
                    app:iconSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>