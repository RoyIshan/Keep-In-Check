<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#367661F3"
    android:orientation="vertical"
    tools:context=".SelectIdentity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:elevation="15dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/chooseidentityicon2"></com.google.android.material.imageview.ShapeableImageView>


    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Select Your Identity"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="Please Choose Your Identity depending upon whether you are here to get work or give work. "
        android:textAlignment="center"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="133dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="#024E8A"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/Owner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="20dp"
            android:background="@drawable/circlebutton"
            android:backgroundTint="#01B0FF"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Owner"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Worker"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circlebutton"
            android:backgroundTint="#00B0FF"
            android:fontFamily="@font/poppins_semibold"
            android:text="Worker"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <Button
        android:id="@+id/gotoLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="@color/colorPrimary"
        android:elegantTextHeight="true"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="10dp"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
